package java8;

import java.util.List;
import java.util.function.BinaryOperator;
import java.util.function.Consumer;
import java.util.function.Function;
import java.util.function.Predicate;

public class F04BehaviourParamaterization {

	public static void main(String[] args) {
		List<Integer> numbers = List.of(45, 2, 8, 5, 10);

		Predicate<Integer> predicate = i -> i % 2 == 0;
		Predicate<Integer> predicate2 = i -> i % 2 == 1;

		extracted(numbers, predicate2);

	}

	private static void extracted(List<Integer> numbers, Predicate<Integer> predicate) {
		System.out.println(numbers.stream().filter(predicate).reduce(0, F04BehaviourParamaterization::sum));
	}

	public static int sum(int a, int b) {
		return a + b;
	}
}